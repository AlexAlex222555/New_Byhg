Процедура ЗаполнитьДанныеУпаковокВСтрокеНабораДанных(Строка, ТаблицаДанныхУпаковок) Экспорт
	
	РеквизитыПоиска = "Номенклатура,Упаковка";
	
	Если ТаблицаДанныхУпаковок.Индексы.Количество() = 0 Тогда
		ТаблицаДанныхУпаковок.Индексы.Добавить(РеквизитыПоиска);
	КонецЕсли;
	
	СтрокаТаблицы = Неопределено;
	
	НайденныеСтроки = ТаблицаДанныхУпаковок.НайтиСтроки(Новый Структура(РеквизитыПоиска, Строка.Номенклатура, Строка.Упаковка));
	Если НайденныеСтроки.Количество() > 0 Тогда
		
		СтрокаТаблицы = НайденныеСтроки[0];
		
		Если ЗначениеЗаполнено(СтрокаТаблицы.ДанныеУпаковки) Тогда
		
			Строка.ДанныеУпаковки = СтрокаТаблицы.ДанныеУпаковки;
			Возврат;
			
		КонецЕсли;
		
		СтрокаТаблицы.ДанныеУпаковки = ПолучитьСтруктуруДанныхУпаковки(НайденныеСтроки[0]);
		
	КонецЕсли;
	
	Если ЗначениеЗаполнено(СтрокаТаблицы) И ЗначениеЗаполнено(СтрокаТаблицы.ДанныеУпаковки) Тогда
		Строка.ДанныеУпаковки = СтрокаТаблицы.ДанныеУпаковки;
	Иначе
		Строка.ДанныеУпаковки = СтруктураДанныхУпаковки();
	КонецЕсли;
	
