//
// Параметры:
//  ПараметрыЗапроса            - Структура - см. УправлениеДаннымиОбИзделиях.ПараметрыТекстаЗапросаСпецификацийНоменклатуры()
//  ПараметрыВыбораСпецификаций - Структура - см. УправлениеДаннымиОбИзделияхКлиентСервер.ПараметрыВыбораСпецификаций()
// 
// Возвращаемое значение:
//  Строка - текст запроса для выбора спецификаций номенклатуры
//
Функция ТекстЗапросаСпецификацийНоменклатуры(ПараметрыЗапроса, ПараметрыВыбораСпецификаций) Экспорт
	
	ТаблицыУничтожить = Новый Массив;
	ТаблицыУничтожить.Добавить("ВтИсточникДоступныхСпецификаций");
	ТаблицыУничтожить.Добавить("ВтДоступныеСпецификации");
	ТаблицыУничтожить.Добавить("ВтСоответствуютПараметрамНазначения");
	ТаблицыУничтожить.Добавить("ВтНайденоВСписке");
	
	Если НЕ ПустаяСтрока(ПараметрыЗапроса.ИмяТаблицыИсточникДоступныхСпецификаций) Тогда
		
		ТекстЗапроса = "
		|
		|ВЫБРАТЬ
		|	СпецификацииИзделий.ИндексДанных                КАК ИндексДанных,
		|	СпецификацииИзделий.Номенклатура                КАК Номенклатура,
		|	СпецификацииИзделий.Характеристика              КАК Характеристика,
		|	СпецификацииИзделий.ПодразделениеДиспетчер      КАК ПодразделениеДиспетчер,
		|	СпецификацииИзделий.НаправлениеДеятельности     КАК НаправлениеДеятельности,
		|
		|	%ТекстПоляНачалоПроизводстваСоСмещением%
		|
		|	СпецификацииИзделий.Спецификация                КАК Спецификация,
		|	СпецификацииИзделий.Спецификация.НачалоДействия КАК НачалоДействия,
		|	СпецификацииИзделий.Спецификация.КонецДействия  КАК КонецДействия,
		|	СпецификацииИзделий.Спецификация.Код            КАК Код,
		|	
		|	СпецификацииИзделий.Спецификация.ВариантПодбораВДокументы = ЗНАЧЕНИЕ(Перечисление.ВариантыПодбораСпецификацииВДокументы.Автоматически)
		|		И СпецификацииИзделий.Статус = ЗНАЧЕНИЕ(Перечисление.СтатусыСпецификаций.Действует)
		|		И НЕ СпецификацииИзделий.ПобочныйВыход      КАК ПодбираетсяАвтоматически,
		|	СпецификацииИзделий.ЛюбаяНоменклатура           КАК ЛюбаяНоменклатура,
		|	СпецификацииИзделий.ЛюбаяХарактеристика         КАК ЛюбаяХарактеристика
		|
		|ПОМЕСТИТЬ ВтИсточникДоступныхСпецификаций
		|ИЗ
		|	%ИмяТаблицыИсточникДоступныхСпецификаций% КАК СпецификацииИзделий
		|
		|		%ТекстСоединенияКалендарныеГрафики%
		|
		|ГДЕ
		|
		|	(СпецификацииИзделий.ТипПроизводственногоПроцесса В (&ДоступныеТипы)
		|		ИЛИ &ДоступныеТипыБезОтбора)
		|
		|	И (СпецификацииИзделий.Статус В (&ДоступныеСтатусы)
		|		ИЛИ &ДоступныеСтатусыБезОтбора)
		|
		|	И (СпецификацииИзделий.Спецификация <> &ИсключитьСпецификацию
		|		ИЛИ &ИсключитьСпецификациюБезОтбора)
		|
		|	И (СпецификацииИзделий.Спецификация.Наименование ПОДОБНО &СтрокаПоиска
		|		ИЛИ &СтрокаПоиска = """")
		|
		|	И (СпецификацииИзделий.ПобочныйВыход = ЛОЖЬ
		|		ИЛИ &СпецификацииПоФиксированнойСтоимости = ИСТИНА)
		|
		|	//%ТекстУсловиеОтбораПоУпаковке
		|
		|	//%ИсключитьПроизводствоНаСтороне
		|
		|;
		|////////////////////////////////////////////////////////////////////////////////
		|";
		
		ТекстПоляНоменклатура        = "СпецификацииИзделий.Номенклатура";
		ТекстПоляНачалоПроизводства  = "СпецификацииИзделий.НачалоПроизводства";
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "%ИмяТаблицыИсточникДоступныхСпецификаций%", ПараметрыЗапроса.ИмяТаблицыИсточникДоступныхСпецификаций);
		
	Иначе
		
		ТекстЗапроса = "
		|
		|ВЫБРАТЬ
		|	СписокНоменклатуры.ИндексДанных                 КАК ИндексДанных,
		|	СписокНоменклатуры.Номенклатура                 КАК Номенклатура,
		|	СписокНоменклатуры.Характеристика               КАК Характеристика,
		|	СписокНоменклатуры.ПодразделениеДиспетчер       КАК ПодразделениеДиспетчер,
		|	СписокНоменклатуры.НаправлениеДеятельности      КАК НаправлениеДеятельности,
		|
		|	%ТекстПоляНачалоПроизводстваСоСмещением%
		|
		|	СпецификацииИзделий.Спецификация                КАК Спецификация,
		|	СпецификацииИзделий.Спецификация.НачалоДействия КАК НачалоДействия,
		|	СпецификацииИзделий.Спецификация.КонецДействия  КАК КонецДействия,
		|	СпецификацииИзделий.Спецификация.Код            КАК Код,
		|
		|	СпецификацииИзделий.Спецификация.ВариантПодбораВДокументы = ЗНАЧЕНИЕ(Перечисление.ВариантыПодбораСпецификацииВДокументы.Автоматически)
		|		И СпецификацииИзделий.Статус = ЗНАЧЕНИЕ(Перечисление.СтатусыСпецификаций.Действует)
		|		И НЕ СпецификацииИзделий.ПобочныйВыход                                                        КАК ПодбираетсяАвтоматически,
		|	СпецификацииИзделий.Номенклатура   = ЗНАЧЕНИЕ(Справочник.Номенклатура.ПустаяСсылка)               КАК ЛюбаяНоменклатура,
		|	СпецификацииИзделий.Характеристика = ЗНАЧЕНИЕ(Справочник.ХарактеристикиНоменклатуры.ПустаяСсылка) КАК ЛюбаяХарактеристика
		|
		|ПОМЕСТИТЬ ВтИсточникДоступныхСпецификаций
		|ИЗ
		|	РегистрСведений.СпецификацииИзделий КАК СпецификацииИзделий
		|
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ ВтСписокНоменклатуры КАК СписокНоменклатуры
		|		 ПО СпецификацииИзделий.ВидНоменклатуры = СписокНоменклатуры.Номенклатура.ВидНоменклатуры
		|			И (СпецификацииИзделий.Номенклатура = СписокНоменклатуры.Номенклатура
		|				ИЛИ СпецификацииИзделий.Номенклатура = ЗНАЧЕНИЕ(Справочник.Номенклатура.ПустаяСсылка))
		|			И (СпецификацииИзделий.Характеристика = СписокНоменклатуры.Характеристика
		|				ИЛИ СпецификацииИзделий.Характеристика = ЗНАЧЕНИЕ(Справочник.ХарактеристикиНоменклатуры.ПустаяСсылка))
		|			%ТекстУсловиеОтбораВходящихДанных%
		|
		|		%ТекстСоединенияКалендарныеГрафики%
		|
		|ГДЕ
		|
		|	(СпецификацииИзделий.ТипПроизводственногоПроцесса В (&ДоступныеТипы)
		|		ИЛИ &ДоступныеТипыБезОтбора)
		|
		|	И (СпецификацииИзделий.Статус В (&ДоступныеСтатусы)
		|		ИЛИ &ДоступныеСтатусыБезОтбора)
		|
		|	И (СпецификацииИзделий.Спецификация <> &ИсключитьСпецификацию
		|		ИЛИ &ИсключитьСпецификациюБезОтбора)
		|
		|	И (СпецификацииИзделий.Спецификация.Наименование ПОДОБНО &СтрокаПоиска
		|		ИЛИ &СтрокаПоиска = """")
		|
		|	И (СпецификацииИзделий.ПобочныйВыход = ЛОЖЬ
		|		ИЛИ &СпецификацииПоФиксированнойСтоимости = ИСТИНА)
		|
		|	//%ТекстУсловиеОтбораПоУпаковке
		|
		|	//%ИсключитьПроизводствоНаСтороне
		|
		|;
		|////////////////////////////////////////////////////////////////////////////////
		|";
		
		ТекстПоляНоменклатура        = "СписокНоменклатуры.Номенклатура";
		ТекстПоляНачалоПроизводства  = "СписокНоменклатуры.НачалоПроизводства";
	
	КонецЕсли;
	
	ТекстУсловиеОтбораПоУпаковке = СтрШаблон("
	|	И ВЫБОР КОГДА СпецификацииИзделий.Спецификация.ВариантНазначения = ЗНАЧЕНИЕ(Перечисление.ВариантыНазначенияСпецификации.ВидНоменклатуры)
	|			И НЕ (%1.ЕдиницаИзмерения = СпецификацииИзделий.Спецификация.ОсновноеИзделиеУпаковка) ТОГДА
	|		ВЫБОР (СпецификацииИзделий.Спецификация.ОсновноеИзделиеУпаковка.ТипИзмеряемойВеличины)
	|			КОГДА ЗНАЧЕНИЕ(Перечисление.ТипыИзмеряемыхВеличин.Упаковка)
	|				ТОГДА (СпецификацииИзделий.Спецификация.ОсновноеИзделиеУпаковка.Владелец В (%1, %1.НаборУпаковок))
	|			КОГДА ЗНАЧЕНИЕ(Перечисление.ТипыИзмеряемыхВеличин.Вес)
	|				ТОГДА (%1.ВесИспользовать И %1.ВесМожноУказыватьВДокументах)
	|			КОГДА ЗНАЧЕНИЕ(Перечисление.ТипыИзмеряемыхВеличин.Объем)
	|				ТОГДА (%1.ОбъемИспользовать И %1.ОбъемМожноУказыватьВДокументах)
	|			КОГДА ЗНАЧЕНИЕ(Перечисление.ТипыИзмеряемыхВеличин.Длина)
	|				ТОГДА (%1.ДлинаИспользовать И %1.ДлинаМожноУказыватьВДокументах)
	|			КОГДА ЗНАЧЕНИЕ(Перечисление.ТипыИзмеряемыхВеличин.Площадь)
	|				ТОГДА (%1.ПлощадьИспользовать И %1.ПлощадьМожноУказыватьВДокументах)
	|			ИНАЧЕ
	|				ЛОЖЬ
	|		КОНЕЦ
	|	ИНАЧЕ
	|		ИСТИНА
	|	КОНЕЦ
	|", ТекстПоляНоменклатура);
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "//%ТекстУсловиеОтбораПоУпаковке", ТекстУсловиеОтбораПоУпаковке);
	
	Если ЗначениеЗаполнено(ПараметрыВыбораСпецификаций.ПараметрыСмещенияПериода) Тогда
		
		ТекстПоляНормативнаяДлительность = СтрШаблон("ЕСТЬNULL(НормативнаяДлительностьПроизводства.%1, 0)",
			ПараметрыВыбораСпецификаций.ПараметрыСмещенияПериода.ПолеДлительность);
		
		ТекстПоляНачалоПроизводстваСоСмещением = "
		|	ВЫБОР КОГДА %ТекстПоляНормативнаяДлительность% = 0 ТОГДА
		|		%ТекстПоляНачалоПроизводства%
		|	ИНАЧЕ
		|		ЕСТЬNULL(ЕСТЬNULL(ТекущийГод.ДатаГрафика, ПредыдущийГод.ДатаГрафика),
		|			ДОБАВИТЬКДАТЕ(%ТекстПоляНачалоПроизводства%, ДЕНЬ, -%ТекстПоляНормативнаяДлительность%)) 
		|	КОНЕЦ КАК НачалоПроизводства,
		|";
		
		ТекстСоединенияКалендарныеГрафики = "
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.НормативнаяДлительностьПроизводства КАК НормативнаяДлительностьПроизводства
		|		ПО СпецификацииИзделий.Спецификация = НормативнаяДлительностьПроизводства.Спецификация
		|
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.КалендарныеГрафики КАК ТекущаяДата
		|		ПО ТекущаяДата.Календарь      = &Календарь
		|			И ТекущаяДата.Год         = ГОД(%ТекстПоляНачалоПроизводства%)
		|			И ТекущаяДата.ДатаГрафика = %ТекстПоляНачалоПроизводства%
		|		
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.КалендарныеГрафики КАК ТекущийГод
		|		ПО ТекущийГод.Календарь                            = &Календарь
		|			И ТекущийГод.ДеньВключенВГрафик                = ИСТИНА
		|			И ТекущийГод.Год                               = ГОД(%ТекстПоляНачалоПроизводства%)
		|			И ТекущийГод.КоличествоДнейВГрафикеСНачалаГода = ТекущаяДата.КоличествоДнейВГрафикеСНачалаГода - %ТекстПоляНормативнаяДлительность%
		|		
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.КалендарныеГрафики КАК ПоследняяДатаГода
		|		ПО ТекущийГод.ДатаГрафика ЕСТЬ NULL
		|			И ПоследняяДатаГода.Календарь   = &Календарь
		|			И ПоследняяДатаГода.Год         = ГОД(%ТекстПоляНачалоПроизводства%) - 1
		|			И ПоследняяДатаГода.ДатаГрафика = НАЧАЛОПЕРИОДА(ДОБАВИТЬКДАТЕ(НАЧАЛОПЕРИОДА(%ТекстПоляНачалоПроизводства%, ГОД), СЕКУНДА, -1), ДЕНЬ)
		|
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.КалендарныеГрафики КАК ПредыдущийГод
		|		ПО ТекущийГод.ДатаГрафика ЕСТЬ NULL
		|			И ПредыдущийГод.Календарь          = &Календарь
		|			И ПредыдущийГод.ДеньВключенВГрафик = ИСТИНА
		|			И ПредыдущийГод.Год                = ГОД(%ТекстПоляНачалоПроизводства%) - 1
		|			И ПредыдущийГод.КоличествоДнейВГрафикеСНачалаГода 
		|					= ПоследняяДатаГода.КоличествоДнейВГрафикеСНачалаГода - (%ТекстПоляНормативнаяДлительность% - ТекущаяДата.КоличествоДнейВГрафикеСНачалаГода)
		|
		|";
		
		ТекстПоляНачалоПроизводстваСоСмещением = СтрЗаменить(ТекстПоляНачалоПроизводстваСоСмещением, "%ТекстПоляНормативнаяДлительность%", ТекстПоляНормативнаяДлительность);
		ТекстСоединенияКалендарныеГрафики = СтрЗаменить(ТекстСоединенияКалендарныеГрафики, "%ТекстПоляНормативнаяДлительность%", ТекстПоляНормативнаяДлительность);
		
	Иначе
		
		ТекстПоляНачалоПроизводстваСоСмещением = "%ТекстПоляНачалоПроизводства% КАК НачалоПроизводства,";
		ТекстСоединенияКалендарныеГрафики      = "";
		
	КонецЕсли;
	
	ТекстЗапроса = ТекстЗапроса + "
	|ВЫБРАТЬ
	|	ДоступныеСпецификации.ИндексДанных                               КАК ИндексДанных,
	|	ДоступныеСпецификации.Спецификация                               КАК Спецификация,
	|	ДоступныеСпецификации.ЛюбаяНоменклатура                          КАК ЛюбаяНоменклатура,
	|	ДоступныеСпецификации.ЛюбаяХарактеристика                        КАК ЛюбаяХарактеристика,
	|
	|	ДоступныеСпецификации.НачалоПроизводства                         КАК НачалоПроизводства,
	|	ДоступныеСпецификации.НачалоДействия                             КАК НачалоДействия,
	|	ДоступныеСпецификации.КонецДействия                              КАК КонецДействия,
	|	ДоступныеСпецификации.Код                                        КАК Код,
	|	ДоступныеСпецификации.ПодбираетсяАвтоматически                   КАК ПодбираетсяАвтоматически,
	|
	|	ПараметрыНазначенияСпецификаций.ВидПараметра                     КАК ВидПараметраНазначения,
	|	&КлючСвязиПустой                                                 КАК ВидУточненияПрименения,
	|
	|	ПараметрыНазначенияСпецификаций.Реквизит                         КАК Реквизит,
	|	ЕСТЬNULL(ВЫБОР
	|				КОГДА ЗначенияПараметровНазначенияСпецификаций.НомерВСписке В (0, 1)
	|					ТОГДА ПараметрыНазначенияСпецификаций.Приоритет
	|				ИНАЧЕ 0
	|			КОНЕЦ, 0)                                                КАК Приоритет,
	|
	|	ЕСТЬNULL(ЗначенияПараметровНазначенияСпецификаций.Условие, """") КАК Условие,
	|	ЗначенияПараметровНазначенияСпецификаций.Значение                КАК ЗначениеНастройки,
	|
	|	ВЫБОР ПараметрыНазначенияСпецификаций.ВидПараметра
	|		КОГДА ЗНАЧЕНИЕ(Перечисление.ВидыПараметровНазначенияСпецификаций.ПодразделениеДиспетчер)
	|			ТОГДА ДоступныеСпецификации.ПодразделениеДиспетчер
	|		КОГДА ЗНАЧЕНИЕ(Перечисление.ВидыПараметровНазначенияСпецификаций.НаправлениеДеятельности)
	|			ТОГДА ДоступныеСпецификации.НаправлениеДеятельности
	|		КОГДА ЗНАЧЕНИЕ(Перечисление.ВидыПараметровНазначенияСпецификаций.ДопРеквизитПодразделения)
