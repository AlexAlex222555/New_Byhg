	ПараметрыШтрихкода.Вставить("GS1DatabarКоличествоСтрок", 2);
	ПараметрыШтрихкода.Вставить("ТипВходныхДанных", 0); // Тип входных данных (0-Строка, 1-Base64).
	
	Возврат ПараметрыШтрихкода;
	
